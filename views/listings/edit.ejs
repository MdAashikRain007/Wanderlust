<% layout("layouts/boilerplate") %>

<body>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <h3 class="mb-4">Edit Listing</h3>

                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT"
                    class="needs-validation" novalidate enctype="multipart/form-data">

                    <!-- Title -->
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required>
                        <div class="valid-feedback">Title looks good.</div>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea rows="5" name="listing[description]" class="form-control" required><%= listing.description %></textarea>
                        <div class="invalid-feedback">Please provide a valid description.</div>
                    </div>

                    <!-- Original Image -->
                    <div class="mb-3">
                        <p><strong>Original Image</strong></p>
                        <img src="<%= originalImageUrl %>" alt="listing_image" class="img-fluid rounded">
                    </div>

                    <!-- Upload New Image -->
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload New Image</label>
                        <input name="listing[image]" class="form-control" type="file">
                    </div>
                   
          <!-- Category -->
          <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select name="listing[category]" class="form-select" required>
              <option disabled>Select a Category</option>
              <% const categories = ["Beach", "Mountain", "Village", "Desert", "Forest", "Lake", "Artic", "Other"]; %>
              <% categories.forEach(cat => { %>
                <option value="<%= cat %>" <%= listing.category === cat ? 'selected' : '' %>><%= cat %></option>
              <% }) %>
            </select>
          </div>

                    <!-- Price and Country -->
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" value="<%= listing.price %>" class="form-control" type="number" required>
                            <div class="invalid-feedback">Please enter a valid price.</div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" type="text" class="form-control" value="<%= listing.country %>" required>
                            <div class="invalid-feedback">Please enter a valid country.</div>
                        </div>
                    </div>

                    <!-- Location -->
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" value="<%= listing.location %>" class="form-control" type="text" required>
                        <div class="invalid-feedback">Please provide a valid location.</div>
                    </div>

                    <!-- Submit Button -->
                    <button class="btn btn-dark mb-3">Edit</button>
                </form>
            </div>
        </div>
    </div>

    <script src="/javaScript/script.js"></script>
</body>
